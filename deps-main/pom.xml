<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <packaging>pom</packaging>

    <modules>
        <module>modules/spring</module>
        <module>modules/core</module>
    </modules>

    <groupId>pwh</groupId>
    <artifactId>deps</artifactId>
    <version>${revision}</version>

    <properties>
        <!-- THIS -->
        <pwh.version.deps>20230315.0</pwh.version.deps>
        <revision>${pwh.version.deps}</revision>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- THIRD PARTIES -->
        <pwh.version.springboot>2.7.9</pwh.version.springboot>
        <pwh.version.springboot-cloud>2021.0.6</pwh.version.springboot-cloud>
        <pwh.version.springboot.cloud.aws>2.4.2</pwh.version.springboot.cloud.aws>
        <pwh.version.commons-text>1.9</pwh.version.commons-text>
        <pwh.version.commons-collections4>4.4</pwh.version.commons-collections4>
        <pwh.version.commons-io>2.11.0</pwh.version.commons-io>
        <pwh.version.commons-vfs>2.11.0</pwh.version.commons-vfs>
        <pwh.version.jasypt>1.9.3</pwh.version.jasypt>
        <pwh.version.jjwt>0.9.1</pwh.version.jjwt>
        <pwh.version.lombok>1.18.26</pwh.version.lombok> <!-- aligned with spring boot's version -->
        <pwh.version.lombok-mapstruct-binding>0.2.0</pwh.version.lombok-mapstruct-binding>
        <pwh.version.mapstruct>1.5.3.Final</pwh.version.mapstruct>
        <pwh.version.rsql>2.1.0</pwh.version.rsql>
        <!-- follow spring's version -->
        <pwh.version.postgres>42.3.8</pwh.version.postgres>
        <pwh.version.jooq>3.15.12</pwh.version.jooq>
        <pwh.version.auto-service>1.0.1</pwh.version.auto-service>
        <pwh.version.swagger-annotation>2.2.0</pwh.version.swagger-annotation>
        <pwh.version.openapi>1.6.9</pwh.version.openapi>
        <pwh.version.feign>11.8</pwh.version.feign>
        <!-- PLUGINS -->
        <pwh.version.maven-flattern>1.3.0</pwh.version.maven-flattern>
        <pwh.version.maven-compiler>3.10.1</pwh.version.maven-compiler>
    </properties>

